@using DaLiExpress.Models
@model dynamic

<h2>Platform</h2>
@using (Html.BeginForm())
{
    <fieldset id="search-field">
        <input type="text" name="SearchedPlatforms" />
        <input type="submit" value="Search" height="10" class="btn btn-default" id="search-btn" autofocus />
    </fieldset>
}

@if (ViewBag.AllPlatforms.Count == 0 == false)
{
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Available Games
            </th>
            <th>
                Mutationen
            </th>
        </tr>
        @foreach (Platform platform in ViewBag.AllPlatforms)
        {
            <tr>
                <td>
                    @platform.ID
                </td>
                <td>
                    @platform.Name
                </td>
                <td>
                    @{
                        if (platform.Game.Any())
                        {
                            @(string.Join(", ", platform.Game.Select(d => d.Name).ToList()))
                        }
                        else
                        {
                            @("No games published yet")
                        }
                    }
                </td>
                <td>
                    @(this.Html.ActionLink("Edit", "Edit", new { id = platform.ID })) |
                    @(this.Html.ActionLink("Delete", "Delete", new { id = platform.ID }))
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No results were found</p>
}